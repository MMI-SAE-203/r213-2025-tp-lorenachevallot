---
const { nomMaison, adresse, nbChambres, id, nbSdb, surface, prix, imgUrl } =
    Astro.props;
---

<li
    class="w-full max-w-xl shadow-md p-4 rounded-lg flex flex-col gap-2 bg-gray-200"
>
    <h2 class="font-medium text-2xl font-main">{nomMaison}</h2>
    <p>Adresse : {adresse}</p>
    <p>{nbChambres} chambres, {nbSdb} salles de bain</p>
    <p>Surface : {surface} m²</p>
    <p>Prix : {prix} €</p>
    <img src={imgUrl} alt="" />
    <a
        href={`/offres/${id}`}
        class="w-25 px-4 py-2 text-center bg-blue-900 text-white font-semibold rounded-lg shadow-md
          hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400
          transition duration-300 ease-in-out transform hover:scale-105"
    >
        Voir plus
    </a>
</li>
