---
const { nomMaison, adresse, nbChambres, id, nbSdb, surface, prix, imgUrl } =
    Astro.props;
    
---

<li class="w-full max-w-xl shadow-md p-4 rounded-lg flex flex-col gap-2 bg-gray-200">
    <h2 class="font-medium  text-2xl font-main">{nomMaison}</h2>
    <p>Adresse : {adresse}</p>
    <p>{nbChambres} chambres, {nbSdb} salles de bain</p>
    <p>Surface : {surface} m²</p>
    <p>Prix : {prix} €</p>
    <img src={imgUrl} alt="" />
    <a href=`/offres/${id}`>voir plus</a>
</li>
